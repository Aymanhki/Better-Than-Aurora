<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.group_15.bta">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BTA">
        <activity
            android:name=".instructor_account"
            android:exported="false" />
        <activity
            android:name=".advisor_account"
            android:exported="false" />
        <activity
            android:name=".admin_account"
            android:exported="false" />
        <activity
            android:name=".student_account"
            android:exported="false" />
        <activity
            android:name=".administrator_account"
            android:exported="false"
            android:label="@string/title_activity_administrator_account" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:windowSoftInputMode="stateAlwaysHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>