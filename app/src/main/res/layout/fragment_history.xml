<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="presentation.HistoryFragment"
    android:background="@color/cosmic_latte"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/light_green"
            android:paddingTop="50dp">

            <TextView
                android:id="@+id/gpa_history_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="serif"
                android:layout_gravity="center"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="10dp"
                android:text="@string/gpa_label_text_in_student_history_fragment"
                android:textColor="@color/dark_brown"
                android:textSize="30sp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/credit_hours_history_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="serif"
                android:layout_gravity="center"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="10dp"
                android:text="@string/credit_hours_label_text_in_student_history_fragment"
                android:textColor="@color/dark_brown"
                android:textSize="30sp"
                android:textAlignment="center"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ListView
                android:id="@+id/completed_courses_student_section_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/completed_courses_student_section_list_empty_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="10dp"
                android:text="You have not completed any courses"
                android:textAlignment="center"
                android:textColor="@color/dark_brown"
                android:textSize="30sp"
                tools:ignore="HardcodedText" />
        </RelativeLayout>


    </LinearLayout>



</FrameLayout>