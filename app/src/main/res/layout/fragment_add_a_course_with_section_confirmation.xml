<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.AddSectionFragment"
    android:background="@color/cosmic_latte">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="UselessParent">


    <TextView
        android:id="@+id/confirm_adding_section_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="@string/confirmation_message_for_student_adding_a_section"
        android:padding="10dp"
        android:textAlignment="center"
        android:textColor="@color/dark_brown"
        android:textSize="30sp"
        android:background="@color/light_green"
        />

    <ListView
        android:id="@+id/confirm_section_selection_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>

    <Button
        android:id="@+id/add_section_btn"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textAllCaps="false"
        android:layout_weight="1"
        android:layout_gravity="end"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:text="@string/add_btn_text_for_student_adding_a_section" />
</LinearLayout>




</FrameLayout>