<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/dialog_border"
    android:theme="@style/dialog_custom_style"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textColor="@color/dark_brown"
        android:fontFamily="serif"
        android:text="@string/prompt_message_for_select_a_degree_for_Student_dialog"/>

    <ListView
        android:id="@+id/to_select_a_degree_from_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/add_a_new_degree_btn_for_student"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:text="@string/add_a_new_degree_btn_text_in_select_a_degree_for_student_dialog"
            android:textAllCaps="false"
            android:textSize="18sp" />
</LinearLayout>