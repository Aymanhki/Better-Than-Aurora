<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.StudentHomeFragment"
    android:background="@color/cosmic_latte"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/student_home_summary"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:focusable="true">

                <TextView
                    android:id="@+id/pie_chart_msg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/light_green"
                    android:fontFamily="serif"
                    android:layout_weight="0"
                    android:padding="10dp"
                    android:text="Your Degree Progress:"
                    android:textColor="@color/dark_brown"
                    android:textSize="30sp"
                    tools:ignore="HardcodedText" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="450dp"
                    android:paddingTop="50dp"
                    android:paddingBottom="50dp"
                    android:background="@color/cosmic_latte" >
                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/degree_breakdown_pie"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@color/cosmic_latte" />
                </LinearLayout>


                <TextView
                    android:id="@+id/enrolled_courses_msg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/light_green"
                    android:fontFamily="serif"
                    android:padding="10dp"
                    android:layout_weight="0"
                    android:text="Courses you are enrolled in:"
                    android:textColor="@color/dark_brown"
                    android:textSize="30sp"
                    tools:ignore="HardcodedText"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="600dp">

                    <ListView
                        android:id="@+id/student_enrolled_courses"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/cosmic_latte"
                        android:nestedScrollingEnabled="true"/>

                        <TextView
                            android:id="@+id/student_enrolled_courses_empty"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="You are so lucky to not be registered in any sections right now."
                            android:textAlignment="center"
                            android:textColor="@color/dark_brown"
                            android:textSize="30sp"
                            tools:ignore="HardcodedText" />


                </RelativeLayout>

                <TextView
                    android:id="@+id/required_courses_msg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/light_green"
                    android:fontFamily="serif"
                    android:padding="10dp"
                    android:layout_weight="0"
                    android:text="Courses you need to take:"
                    android:textColor="@color/dark_brown"
                    android:textSize="30sp"
                    tools:ignore="HardcodedText" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="500dp">

                    <ListView
                        android:id="@+id/student_required_courses"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/cosmic_latte"
                        android:nestedScrollingEnabled="true"/>

                    <TextView
                        android:id="@+id/student_required_courses_empty"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="You are done with your degree, go get some sleep."
                        android:textAlignment="center"
                        android:textColor="@color/dark_brown"
                        android:textSize="30sp"
                        tools:ignore="HardcodedText" />
                </RelativeLayout>


            </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>
