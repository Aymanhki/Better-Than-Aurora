<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.StudentHomeFragment"
    android:background="@color/cosmic_latte">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/welcomeMessageTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:text="Courses you are enrolled in:"
            android:padding="10dp"
            android:textColor="@color/dark_brown"
            android:textSize="30sp"
            android:background="@color/light_green"
            tools:ignore="HardcodedText" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ListView
                android:id="@+id/student_enrolled_courses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cosmic_latte"></ListView>

            <TextView
                android:id="@+id/student_enrolled_courses_empty"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="10dp"
                android:text="You are so lucky to not be registered in any sections right now."
                android:textAlignment="center"
                android:textColor="@color/dark_brown"
                android:textSize="30sp"
                tools:ignore="HardcodedText"></TextView>
        </RelativeLayout>


    </LinearLayout>



</FrameLayout>