<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/dialog_border"
    android:theme="@style/dialog_custom_style"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textColor="@color/dark_brown"
        android:fontFamily="serif"
        android:text="Select the degrees that require this course"/>

    <ListView
        android:id="@+id/to_select_degrees_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="10dp"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp">

        <Button
            android:id="@+id/done_selecting_degrees"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="2"
            android:text="Done"
            android:textAllCaps="false"
            android:textSize="18sp" />

        <Button
            android:id="@+id/add_a_new_degree_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="Add a new Degree"
            android:textAllCaps="false"
            android:textSize="18sp" />
    </LinearLayout>





</LinearLayout>