<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/CategoryName"
        android:background="@color/light_green"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:textSize="50sp"
        android:textColor="@color/dark_brown"

        android:fontFamily="serif"
        android:textAlignment="center"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="388dp"
        android:background="@color/cosmic_latte">

        <Button
            android:id="@+id/AddCourse"
            android:layout_width="180dp"
            android:layout_height="66dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:onClick="buttonAddCourse"
            android:text="Add Course"
            android:textAllCaps="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/CourseName"
            android:layout_width="180dp"
            android:layout_height="66dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/edit_text_with_thick_border"
            android:ems="10"
            android:hint="Course Name"
            android:inputType="textPersonName"
            android:paddingStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/CourseID"
            android:layout_width="180dp"
            android:layout_height="66dp"
            android:layout_marginStart="208dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/edit_text_with_thick_border"
            android:ems="10"
            android:hint="Course ID"
            android:inputType="textPersonName"
            android:paddingStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/DeleteCourseID"
            android:layout_width="237dp"
            android:layout_height="61dp"
            android:layout_marginStart="208dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edit_text_with_thick_border"
            android:ems="10"
            android:hint="Type Course ID"
            android:inputType="textPersonName"
            android:paddingStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/courseDegree"
            android:layout_width="340dp"
            android:layout_height="66dp"
            android:background="@drawable/edit_text_with_thick_border"
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="Select a Degree..."

            android:inputType="textMultiLine"
            android:paddingStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.061"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.647" />

        <EditText
            android:id="@+id/TuitionFee"
            android:layout_width="114dp"
            android:layout_height="66dp"
            android:layout_marginStart="372dp"
            android:layout_marginTop="208dp"
            android:background="@drawable/edit_text_with_thick_border"
            android:ems="10"
            android:hint="Tuition Fee"
            android:inputType="numberDecimal"
            android:paddingStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/CourseCreditHours"
            android:layout_width="80dp"
            android:layout_height="66dp"
            android:layout_marginTop="208dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/edit_text_with_thick_border"
            android:ems="10"
            android:hint="CH"
            android:inputType="number"
            android:paddingStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/DeleteCourseButton"
            android:layout_width="180dp"
            android:layout_height="66dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="5dp"
            android:onClick="buttonDeleteCourse"
            android:text="Delete Course"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.965" />


        <EditText
            android:id="@+id/CourseDescription"
            android:layout_width="565dp"
            android:layout_height="94dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="92dp"
            android:background="@drawable/edit_text_with_thick_border"
            android:ems="10"
            android:hint="Description"
            android:inputType="textImeMultiLine"
            android:paddingStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/autofocusDummy"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:inputType="number"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            tools:ignore="TouchTargetSizeCheck">

            <requestFocus />
        </EditText>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dark_green" />

    <ListView
        android:id="@+id/coursesList"
        android:layout_width="match_parent"
        android:layout_height="394dp"
        android:layout_gravity="top"
        android:layout_weight="1"
        android:background="@color/cosmic_latte"
        android:choiceMode="singleChoice"
        android:divider="@color/dark_green"
        android:dividerHeight="1dp"
        android:listSelector="@color/light_green" />

</LinearLayout>