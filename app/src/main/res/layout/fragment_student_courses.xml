<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.StudentCoursesFragment"
    android:background="@color/cosmic_latte">


    <RelativeLayout
        android:layout_width="307dp"
        android:layout_height="486dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center">


        <Button
            android:id="@+id/add_or_drop_courses_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add/Drop Courses"
            android:textColor="@color/dark_brown"
            android:textAllCaps="false"
            android:textSize="30sp" />

        <Button
            android:id="@+id/view_courses_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="View Available Courses"
            android:textAllCaps="false"
            android:textColor="@color/dark_brown"

            android:textSize="30sp" />

        <Button
            android:id="@+id/history_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="History"
            android:textAllCaps="false"
            android:textColor="@color/dark_brown"
            android:textSize="30sp" />

    </RelativeLayout>
</FrameLayout>