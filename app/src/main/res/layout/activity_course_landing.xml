<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cosmic_latte"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="96dp">

        <Button
            android:id="@+id/addCategories"
            android:layout_width="272dp"
            android:layout_height="62dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="16dp"
            android:onClick="buttonAddCategory"
            android:text="Add Category"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/newCategoryName"
            android:layout_width="268dp"
            android:layout_height="61dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:ems="10"
            android:hint="Category Name"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="596dp"
        android:layout_height="674dp"
        android:orientation="vertical">

        <View
            android:id="@+id/divider3"
            android:layout_width="598dp"
            android:layout_height="1dp"
            android:background="@color/dark_green" />

        <ListView
            android:id="@+id/CategoriesList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:background="@color/cosmic_latte"
            android:choiceMode="singleChoice"
            android:divider="@color/dark_green"
            android:dividerHeight="1dp"
            android:listSelector="@color/light_green" />

    </LinearLayout>

</LinearLayout>