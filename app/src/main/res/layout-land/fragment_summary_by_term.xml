<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cosmic_latte"
    android:orientation="vertical"
    android:weightSum="1"

    tools:context=".presentation.SummaryByTermFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:textSize="25sp"
                android:text="@string/term_period_in_student_fees_breakdown_fragment"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/endowment_fee"
                    android:layout_width="392dp"
                    android:layout_height="wrap_content"
                    android:text="@string/endowment_fee_label_text_in_student_fees_break_down_fragment"
                    android:textSize="30sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/endowment_fee_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/endowment_fee_place_holder_amount_in_student_fees_breakdown_fragment"
                    android:textSize="30sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/tuition_fee"
                    android:layout_width="392dp"
                    android:layout_height="wrap_content"
                    android:text="@string/tuition_fees_label_text_in_student_fees_breakdown_fragment"
                    android:textSize="30sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/tuition_fee_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="30sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/registration_fee"
                    android:layout_width="394dp"
                    android:layout_height="wrap_content"
                    android:text="@string/registration_fee_label_text_in_student_fees_breakdown_fragment"
                    android:textSize="30sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/registration_fee_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/registration_fee_amount_place_holder_for_student_fees_breakdown_fragment"
                    android:textSize="30sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/sport_fee"
                    android:layout_width="394dp"
                    android:layout_height="wrap_content"
                    android:text="@string/recreational_service_fee_label_text_for_student_fees_breakdown_fragment"
                    android:textSize="30sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/sport_fee_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/recreational_service_amount_place_holder_for_student_fees_breakdown_fragment"
                    android:textSize="30sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/tech_fee"
                    android:layout_width="395dp"
                    android:layout_height="wrap_content"
                    android:text="@string/tech_fee_label_text_for_student_fees_breakdown_fragment"
                    android:textSize="30sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/tech_fee_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tech_fee_amount_place_holder_for_student_fees_breakdown_fragment"
                    android:textSize="30sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/total_fee"
                    android:layout_width="395dp"
                    android:layout_height="wrap_content"
                    android:text="@string/total_term_charges_label_text_for_Student_fees_breakdown_fragment"
                    android:textSize="30sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/total_fee_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="30sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <TextView
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/divider_for_due_date_in_student_fees_breakdown_fragment"
                android:textColor="#F00"
                android:textSize="30sp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/total_payable"
                    android:layout_width="395dp"
                    android:layout_height="wrap_content"
                    android:text="@string/due_date_label_text_for_student_fees_breakdown_fragment"
                    android:textColor="#F00"
                    android:textSize="30sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/total_payable_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:textStyle="bold" />
            </LinearLayout>


        </LinearLayout>


    </ScrollView>


</LinearLayout>