<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:background="@color/light_green"
        android:orientation="vertical">

        <TextView
            android:id="@+id/CourseName"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@color/light_green"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/Description"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:ems="10"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="15dp" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="223dp"
        android:layout_gravity="top"
        android:background="@color/cosmic_latte">

        <Button
            android:id="@+id/AddSection"
            android:layout_width="180dp"
            android:layout_height="66dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Add Section"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:onClick="buttonAddSection"/>

        <EditText
            android:id="@+id/SectionNumber"
            android:layout_width="180dp"
            android:layout_height="66dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="93dp"
            android:ems="10"
            android:hint="Section Number"
            android:inputType="textPersonName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/StartTime"
            android:layout_width="180dp"
            android:layout_height="66dp"
            android:layout_marginStart="210dp"
            android:layout_marginTop="19dp"
            android:ems="10"
            android:hint="Start Time"
            android:inputType="time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/EndTime"
            android:layout_width="180dp"
            android:layout_height="66dp"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="16dp"
            android:ems="10"
            android:hint="End Time"
            android:inputType="time"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/Days"
            android:layout_width="240dp"
            android:layout_height="66dp"
            android:layout_marginStart="210dp"
            android:layout_marginTop="93dp"
            android:ems="10"
            android:hint="Day: M T W TR F"
            android:inputType="textPersonName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/CAP"
            android:layout_width="60dp"
            android:layout_height="66dp"
            android:layout_marginTop="93dp"
            android:layout_marginEnd="69dp"
            android:ems="10"
            android:inputType="number"
            android:hint="CAP"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/DelSection"
            android:layout_width="180dp"
            android:layout_height="66dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="159dp"
            android:text="Delete Section"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:onClick="buttonDeleteSec"/>

        <EditText
            android:id="@+id/DelSecNumber"
            android:layout_width="180dp"
            android:layout_height="66dp"
            android:layout_marginStart="210dp"
            android:layout_marginTop="161dp"
            android:ems="10"
            android:hint="Section Number"
            android:inputType="textPersonName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="top"
        android:background="@color/cosmic_latte">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/sectionsList"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:choiceMode="singleChoice"
            android:divider="@color/dark_green"
            android:dividerHeight="1dp"
            android:listSelector="@color/light_green"/>
    </LinearLayout>

</LinearLayout>