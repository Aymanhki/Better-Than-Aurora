<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/student_section_graded"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/section_list_item"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        tools:ignore="UselessParent">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/course_name_in_graded_section_list_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/course_place_holder_for_student_Section_list_item"
                android:layout_weight="1"
                android:gravity="start"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textSize="14sp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColor="@color/dark_brown"
                android:background="@drawable/section_item_text" />

            <TextView
                android:id="@+id/grade_in_graded_section_list_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/grade_place_holder_for_student_Section_list_item"
                android:layout_weight="1"
                android:gravity="start"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textSize="14sp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColor="@color/dark_brown"
                android:background="@drawable/section_item_text" />

            <TextView
                android:id="@+id/credit_hours_in_graded_section_list_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/credit_hours_place_holder_for_student_Section_list_item"
                android:layout_weight="1"
                android:gravity="start"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textSize="14sp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColor="@color/dark_brown"
                android:background="@drawable/section_item_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/section_item_text">

            <TextView
                android:id="@+id/instructor_in_graded_section_list_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="@string/instructor_place_holder_for_student_Section_list_item"
                android:textColor="@color/dark_brown"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/location_in_graded_section_list_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/location_place_holder_for_student_Section_list_item"
                android:layout_weight="1"
                android:gravity="start"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textSize="14sp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColor="@color/dark_brown" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>